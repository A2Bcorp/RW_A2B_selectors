<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		
		<soundImpactDefault>BulletImpactSteel</soundImpactDefault>
		
		<selectable>true</selectable>
		<rotatable>true</rotatable>
		
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<constructEffect>ConstructMetal</constructEffect>
		<repairEffect>Repair</repairEffect>
		<holdsRoof>false</holdsRoof>
		<blockLight>false</blockLight>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		
		<altitudeLayer>Waist</altitudeLayer>
        <passability>PassThroughOnly</passability>
		<pathCost>1000</pathCost>
		
		<drawerType>MapMeshAndRealTime</drawerType>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>1</fillPercent>
		<staticSunShadowHeight>0.34</staticSunShadowHeight>
		
		<tickerType>Normal</tickerType>
        <designationCategory>ConveyorOptions</designationCategory>
	</ThingDef>

    <ThingDef ParentName="BuildingBase">
		<defName>A2BSelectorLeft</defName>
		<label>left selector</label>
        <thingClass>Building_Storage</thingClass>
        <graphicPath>Things/Building/SelectorLeft</graphicPath>
        <graphicClass>Graphic_Single</graphicClass>
        <inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
        <statBases>
            <WorkToMake>550</WorkToMake>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Beauty>0</Beauty>
        </statBases>
		<description>Sort and redirect items.</description>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
                <soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
                <transmitsPower>true</transmitsPower>
			</li>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>1</glowRadius>
				<glowColor>(255,200,0,0)</glowColor>
			</li>
			<li>
				<compClass>A2B_Selector.Left</compClass>
				<minTargetTemperature>-10.0</minTargetTemperature>
			</li>
		</comps>
        <size>(1,1)</size>
        <costList>
            <Steel>30</Steel>
		</costList>
		<designationHotkey/>
		<researchPrerequisite><li>A2B2</li></researchPrerequisite>
	</ThingDef>
    
